%table
  %thead
    %tr
      %th Gallery
      %th Actions

  %tbody
    - for gallery in @galleries
      %tr
        %td= gallery.name
        %td
          = link_to 'edit', edit_admin_gallery_path(gallery)
          = link_to 'delete', admin_gallery_path(gallery), method: :delete, confirm: 'Are you sure you want to do this? Be careful! This is permanent and cannot be undone!'
